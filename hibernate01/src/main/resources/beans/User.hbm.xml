<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.jhly.hibernateDemo.model.User" table="user">
        <id name="id" type="java.lang.Integer" column="id">
            <generator class="native"></generator>
        </id>
        <property name="uname" type="java.lang.String" column="uname"></property>
        <property name="upass" type="java.lang.String" column="upass"></property>
        <property name="age" type="java.lang.Integer" column="age"></property>
        <property name="remark" type="java.lang.String" column="remark"></property>
        <property name="createDate" type="java.util.Date" column="createDate"></property>
    </class>
</hibernate-mapping>